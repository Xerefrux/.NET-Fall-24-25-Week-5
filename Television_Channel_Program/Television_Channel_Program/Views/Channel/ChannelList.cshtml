
@{
    ViewBag.Title = "ChannelList";
}

<h2>ChannelList</h2>
@if (TempData["Message"] != null)
{
    <script>
        alert("@TempData["Message"]");
    </script>
}
@if (TempData["Msg"] != null)
{
    <span class="alert alert-info">@TempData["Msg"]</span>
}
@if (Model.Count == 0)
{
    <h1>No Data</h1>
}

else
{
    <table class="table table-bordered">
        <tr>
            <th>Channel Id</th>
            <th>Channel Name</th>
            <th>Established Year</th>
            <th>Country</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ChannelId</td>
                <td>@item.ChannelName</td>
                <td>@item.EstablishedYear</td>
                <td>@item.Country</td>
                <td>
                    <a href="/channel/details/@item.ChannelId" class="btn btn-primary">Details</a>
                    <a href="/channel/editchannel/@item.ChannelId" class="btn btn-info">Edit</a>
                    <a href="/channel/deletechannel/@item.ChannelId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
}

<a class="btn btn-info" href="/channel/createchannel">Create</a>

